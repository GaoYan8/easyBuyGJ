<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/iv_select_common_item_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_show_margin_size_15"
            android:layout_marginRight="5dp" />


        <TextView
            android:id="@+id/tv_select_common_item_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_show_margin_size_15"
            android:layout_toRightOf="@id/iv_select_common_item_left_img"
            android:textColor="@color/color_font_black_a1"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_select_common_item_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_show_margin_size_15"
            android:src="@mipmap/img_arrow_black" />

        <TextView
            android:id="@+id/tv_select_common_item_right_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_show_margin_size_15"
            android:layout_toLeftOf="@id/iv_select_common_item_right_img"
            android:layout_toRightOf="@id/tv_select_common_item_left_text"
            android:background="@null"
            android:cursorVisible="false"
            android:ellipsize="middle"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_font_gray_a1"
            android:textColorHint="@color/color_light_gray_b1"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_select_common_item_line"
        style="@style/LineHorizontal" />


</LinearLayout>