<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<View android:visibility="gone"
        android:id="@+id/view_titlebar"
        android:layout_width="match_parent"
        android:layout_height="1dp" />-->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <RelativeLayout
            android:id="@+id/leftlayout"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/app_show_margin_size_15">

            <ImageView
                android:id="@+id/left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:visibility="visible" />

            <TextView
                android:id="@+id/left_text_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxWidth="50dp"
                android:paddingRight="10dp"
                android:textColor="@color/default_theme_color"
                android:textSize="17sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rightlayout"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_show_margin_size_15"
            android:gravity="right">

            <TextView
                android:id="@+id/right_text_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:lines="1"
                android:textColor="@color/default_theme_color"
                android:textSize="17sp" />


            <ImageView
                android:id="@+id/right_btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toLeftOf="@id/right_text_btn"
                android:background="@null" />


            <ImageView
                android:id="@+id/right_btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/right_btn_right"
                android:background="@null" />


        </RelativeLayout>
        <!--android:textColor="@color/color_font_gray_a1"-->

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/rightlayout"
            android:layout_toRightOf="@id/leftlayout"
            android:gravity="center"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/color_font_gray_a1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--<View
            style="@style/LineHorizontal"
            android:layout_alignParentBottom="true" />-->

    </RelativeLayout>
</LinearLayout>